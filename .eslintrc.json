{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
		"plugin:@typescript-eslint/recommended",
		"prettier/@typescript-eslint", 
		"plugin:prettier/recommended"  
	],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
		"project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
	"rules": {
		"max-len": [
			"warn",
			{
				"tabWidth": 2,
				"ignoreStrings": true,
				"ignoreRegExpLiterals": true
			}
		]
	}
}
